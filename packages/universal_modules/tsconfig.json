{
  "compilerOptions": {
    "lib": ["ESNext"],
    "strict": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "lib",
    "baseUrl": "../../",
    "paths": {
      "@portal/*": ["./packages/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
