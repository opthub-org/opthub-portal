{
  "name": "@portal/functions",
  "packageManager": "pnpm@8.1.0",
  "scripts": {
    "exec": "GCLOUD_PROJECT=opthub-portal IS_LOCAL=true ts-node -r tsconfig-paths/register",
    "lint": "run-p -l -c --aggregate-output lint:*",
    "lint:eslint": "eslint --quiet .",
    "lint:prettier": "prettier --check .",
    "fix": "run-s fix:prettier fix:eslint",
    "fix:prettier": "prettier --write .",
    "fix:eslint": "eslint --quiet --fix .",
    "build": "rm -fr ./dist && webpack",
    "dev": "pnpm run build && firebase emulators:start --only functions",
    "shell": "pnpm run build && firebase functions:shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20",
    "pnpm": "8"
  },
  "main": "dist/index.js",
  "dependencies": {
    "@portal/universal_modules": "file:../../packages/universal_modules",
    "dotenv": "^16.4.5",
    "firebase-admin": "^11.8.0",
    "firebase-functions": "^6.0.1"
  },
  "devDependencies": {
    "firebase-functions-test": "^3.1.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.0",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "private": true
}
